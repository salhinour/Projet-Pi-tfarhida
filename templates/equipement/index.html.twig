{% extends 'base.html.twig' %}

{% block title %}Equipement index{% endblock %}

{% block body %}
    <h1>Equipement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Parking</th>
                <th>NbrChambre</th>
                <th>Internet</th>
                <th>Climatisation</th>
                <th>TypesDeChambre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.id }}</td>
                <td>{{ equipement.Parking ? 'Yes' : 'No' }}</td>
                <td>{{ equipement.nbrChambre }}</td>
                <td>{{ equipement.internet ? 'Yes' : 'No' }}</td>
                <td>{{ equipement.climatisation ? 'Yes' : 'No' }}</td>
                <td>{{ equipement.TypesDeChambre }}</td>
                <td>
                    <a href="{{ path('app_equipement_show', {'id': equipement.id}) }}">show</a>
                    <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipement_new') }}">Create new</a>
{% endblock %}
