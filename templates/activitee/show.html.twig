 {% extends 'base.html.twig' %}

{% block title %}Activite show{% endblock %}

{% block body %}
  <h1>Activitee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activitee.id }}</td>
            </tr>
          
            <tr>
                <th>Nom</th>
                <td>{{ activitee.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ activitee.prix }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ activitee.localisation }}</td>
            </tr>
            <tr>
                <th>NbP</th>
                <td>{{ activitee.nbP }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ activitee.etat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ activitee.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activitee.descriptionact}}</td>
            </tr>
        </tbody>
    </table>
<a href="{{ path('app_activitee_index') }}" class="btn btn-primary">Retour</a>
<a href="{{ path('app_activitee_edit', {'id': activitee.id}) }}" class="btn btn-secondary">edit</a>

    {{ include('activitee/_delete_form.html.twig') }}

{% endblock %}
