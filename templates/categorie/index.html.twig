                <th>Id</th>
                <th>Description</th>
                <th>Type_categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.typeCategorie }}</td>
                <td>
                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-primary">show</a>
                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-secondary">edit</a>
                  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
