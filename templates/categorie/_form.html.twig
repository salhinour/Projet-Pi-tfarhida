<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Mettez ici les autres balises meta, titre et liens vers les autres fichiers CSS -->
    <title>Formulaire avec Bouton Save Personnalisé</title>
    <style>
        /* Styles pour le conteneur du formulaire */
        .form-container {
            max-width: 600px; /* Largeur maximale du cadre */
            margin: 50px auto; /* Centrage horizontal avec un espacement de 50px depuis le haut */
            padding: 20px; /* Espacement intérieur */
            border: 1px solid #ccc; /* Bordure grise de 1px */
            border-radius: 5px; /* Coins arrondis de 5px */
        }

        /* Styles pour le bouton Save */
        .btn-save {
            background-color: green; /* Couleur de fond verte */
            color: white; /* Couleur du texte blanc */
            border: 2px solid green; /* Bordure de 2px solide verte */
            border-radius: 5px; /* Coins arrondis de 5px */
            padding: 8px 12px; /* Espacement intérieur de 8px en haut/bas et 12px à gauche/droite */
            cursor: pointer; /* Curseur de la souris en pointer */
        }

        .btn-save:hover {
            background-color: darkgreen; /* Couleur de fond foncée au survol */
            border-color: darkgreen; /* Couleur de la bordure foncée au survol */
        }
    </style>
</head>
<body>
    <!-- Début du conteneur du formulaire -->
    <div class="form-container">
        <!-- Début du formulaire -->
        {{ form_start(form,{'attr' : { 'novalidate' :'novalidate'}} ) }}
            <!-- Affichage des champs du formulaire -->
            {{ form_widget(form) }}
            <!-- Bouton Save personnalisé -->
            <button class="btn-save">{{ button_label|default('Save') }}</button>
        <!-- Fin du formulaire -->
        {{ form_end(form) }}
    </div>
    <!-- Fin du conteneur du formulaire -->
</body>
</html>